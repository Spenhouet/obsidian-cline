{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": false, // Temporarily relax this to deal with widespread 'any' types from JS/Svelte interop
    "moduleResolution": "bundler", // Changed from "node" to "bundler" for better ESM/CJS interop and SvelteKit-like behavior
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ],
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "$lib/*": ["./src/lib/*"]
    },
    "types": ["node", "svelte"] // Added svelte types
  },
  "include": [
    "**/*.ts",
    "**/*.svelte",
    "src/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "references",
    "build" // Exclude build output
  ]
}
